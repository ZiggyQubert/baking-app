<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectRecepieActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recipe_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/recepies_loading_spinner"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_recipe_display"
        app:layout_constraintEnd_toEndOf="@+id/rv_recipe_display"
        app:layout_constraintStart_toStartOf="@+id/rv_recipe_display"
        app:layout_constraintTop_toTopOf="@+id/rv_recipe_display" />

</android.support.constraint.ConstraintLayout>